<%- include ../partials/header.ejs%>

<%- include ../partials/main_nav.ejs%>

               <main class="container" >
         <div class="row">
         <div class="offset-md-1 col-md-10">
         <h1><%= title %></h1>

      <% if(typeof name == 'string' && name) { %>
         <a href="/users/add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a User </a>
          <% } %>
        <br>
        <table class="table table-bordered table-striped table-hover">
        <! -- Header Row -->
        <tr class="d-flex">      
        <% if(typeof name == 'string' && name) { %>
            <th class="text-center col-2">Name</th>
            <th class="text-center col-2">Number</th>
            <th class="text-center col-5">email</th>
            <th class="text-center col-1"> </th>
            <th class="text-center col-1"> </th>
       <% } else { %>
                        <th class="text-center col-2">Name</th>
                        <th class="text-center col-2">Number</th>
                        <th class="text-center col-5">email</th>
                    <% } %>
        </tr>
                <! -- Repeat Template Row -->
                <% for(let count = 0; count < UserList.length; count++) { %>
                <tr class="d-flex">
                  <% if(typeof name == 'string' && name) { %>
                 <td class="text-center col-2"><%= UserList[count].name %></td>
                 <td class="text-center col-2"><%= UserList[count].number %></td>
                 <td class="text-center col-5"><%= UserList[count].email %></td>
                 <td class="text-center col-1"> 
                     <a href="/users/edit/<%= UserList[count]._id %>" class="btn btn-primary btn-sm">
                    <i class="fas fa-pencil-alt"></i> Edit </a> 
                    </td>
                 <td class="text-center col-1"> 
                     <a href="/users/delete/<%= UserList[count]._id %>" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i> Delete </a> 
                 </td>
                    <% } else { %>
                            <td class="text-center col-2"><%= UserList[count].name %></td>
                            <td class="text-center col-2"><%= UserList[count].number %></td>
                            <td class="text-center col-5"><%= UserList[count].email %></td>
                        
                         <% } %>
                </tr>
                <%  } %>
        </table>
          </div>
          </div>
        </main>
    


    <%- include ../partials/bottom_nav.ejs%>

  
    <%- include ../partials/footer.ejs%>
